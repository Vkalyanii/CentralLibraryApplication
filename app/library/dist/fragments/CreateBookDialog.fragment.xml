<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Book"
    >
    <customHeader>
            <Bar>
            <contentLeft>
            <Text text="Create Book"></Text>
            </contentLeft>
                <contentRight>
                    <Button
                        id="cancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="oncancelbtnbook"
                        type="Transparent"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <beginButton>
            <Button
                id="idCreateBookButton"
                text="Create"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
              <Label
                    id="idIISBN"
                    text="ISBN"
                />
                <Input
                    id="idIISBNInput"
                    value="{localModel>/ISBN}"
                />
                <Label
                    id="idTTitle"
                    text="Title"
                />
                <Input
                    id="idTTitleinput"
                    value="{localModel>/Title}"
                />
                <Label
                    id="idAAuthor"
                    text="Author"
                />
                <Input
                    id="idAAuthorInput"
                    value="{localModel>/Author}"
                />
                <Label
                    id="idGGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idGGenreInput"
                    value="{localModel>/Genre}"
                />
                <Label
                    id="idNNoofbooksLabel"
                    text="No_of_Books"
                />
                <Input
                    id="idNNoofbooksInput"
                    value="{localModel>/No_of_books}"
                />
                <Label
                    id="idDDescriptionLabel"
                    text="Description"
                />
                <Input
                    id="idDDescriptionInput"
                    value="{localModel>/Descrption}"
                />
               
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>