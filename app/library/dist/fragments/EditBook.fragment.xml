<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idEditBook"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Edit BOOK Details"
    >
        <beginButton>
            <Button
                id="idEditBookSave"
                text="Save"
                press="onSave"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idEditBookCancel"
                text="Cancel"
                press="onClose"
                type="Negative"
            />
        </endButton>
        <content>
            <!-- form creation -->
            <form:SimpleForm
                id="idEditBookForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
             
                <Label
                    id="idEditBookISBN"
                    text="ISBN"
                />
                <Input
                    id="idEditBookISBNVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/ISBN}"
                />

                <Label
                    id="idEditBookTitle"
                    text="Author"
                />
                <Input
                    id="idEditBookTitleVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/Author}"
                />

                <Label
                    id="idAuthorPrice"
                    text="Title"
                />
                <Input
                    id="idAuthorPriceVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/Title}"
                />
                <Label
                    id="idgGenre"
                    text="Genre"
                />
                <Input
                    id="idGenrePagesVal"
                    type="Text"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/Genre}"
                />
                <Label
                    id="idNo_of_booksAuthor"
                    text="No_of_books"
                />
                <Input
                    id="idNo_of_booksVal"
                    editable="true"
                    valueLiveUpdate="true"
                    liveChange="onEditBtnPress"
                    value="{newBookModel>/No_of_books}"
                />
                <Label
                    id="idDeescription"
                    text="Description"
                />
                <Input
                    id="idDescriptionVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/Description}"
                />
                 <Label
                    id="idavailability"
                    text="Availability"
                />
                <Input
                    id="idAvailabilityVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/Avl_Quantity}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
